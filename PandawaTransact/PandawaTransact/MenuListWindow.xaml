<Window x:Class="PandawaTransact.MenuListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PandawaTransact"
        mc:Ignorable="d"
        Title="MenuListWindow" Height="600" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <DockPanel HorizontalAlignment="Center">
                <Button Width="100" Height="25" Margin="10"/>
                <Button Width="100" Height="25" Margin="10"/>
                <Button Width="100" Height="25" Margin="10"/>
            </DockPanel>
            <DockPanel>
                <DataGrid HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" AlternatingRowBackground="Lavender"  Loaded="DataGrid_Loaded"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>

    