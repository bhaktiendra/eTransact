<Window x:Class="PandawaTransact.ExitPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PandawaTransact"
        mc:Ignorable="d"
        Title="Exit" Height="90.279" Width="185.588" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="51" LastChildFill="False" VerticalAlignment="Top" Width="160" Margin="10,0,0,0">
            <Label x:Name="label" Content="Do you want to exit?" VerticalAlignment="Top" RenderTransformOrigin="-0.02,0.535" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
            <Button x:Name="YesButton" Content="Yes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" DockPanel.Dock="Left" Click="YesButton_Click"/>
            <Button x:Name="NoButton" Content="No" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" DockPanel.Dock="Right" Click="NoButton_Click"/>
        </DockPanel>

    </Grid>
</Window>
