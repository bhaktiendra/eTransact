<Window x:Class="PandawaTransact.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PandawaTransact"
        mc:Ignorable="d"
        Title="SplashWindow" Height="300" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Please select an active SQL Server" HorizontalAlignment="Center"/>
            <DockPanel Margin="10" HorizontalAlignment="Center">
                <ComboBox AllowDrop="True" IsEditable="True" Width="150" Height="30" Margin="5"  Name="ServerList"/>
                <Button Content="Refresh" Width="75" Height="30" Click="RefreshButton_Click" />
            </DockPanel>
            <Button Width="150" Height="30" Content="Select" Click="SelectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
